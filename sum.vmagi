        addi #1, 100, #1 -- 0
        push #1          -- 1
        call @sum        -- 2
        pop #1           -- 3
        halt #1          -- 4

sum:    pop #1         -- 5
        jmpz #1, @base -- 6
        subi #1, 1, #2 -- 7
        push #2        -- 8
        call @sum      -- 9
        pop #2         -- 10
        add #1, #2, #1 -- 11
        push #1        -- 12
        ret

base:   pushi 0        -- 13
        ret            -- 14